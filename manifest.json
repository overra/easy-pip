{
  "manifest_version": 2,
  "name": "easy pip",
  "version": "0.1.0",
  "description": "open PIP in chrome easier",
  "browser_action": {
    "default_icon": {
      "16": "pip-32.png",
      "32": "pip-64.png",  
      "64": "pip-128.png",  
      "128": "pip-256.png"  
    }
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["embed.js"],
    "all_frames": true
  }],
  "permissions": [
    "tabs",
    "webNavigation",
    "storage"
  ],
  "icons": {
    "16": "pip-32.png",
    "32": "pip-64.png",  
    "64": "pip-128.png",  
    "128": "pip-256.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}